        [(* ?new-start-days 60 60 24 1000) ?range]
        [(- ?new-end-ts ?range) ?period]
        [(>= ?ts ?period)]
        [(< ?ts ?new-end-ts)]
    ]    
]
:collapsed? true
:breadcrumb-show? false
}


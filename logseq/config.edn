    ]
    [(psu-overdue ?b ?deadline)
        [?b :block/deadline ?date]
        [(< ?date ?deadline)]
    ]
    [(psu-today ?b ?today)
        (or [?b :block/deadline ?date] [?b :block/scheduled ?date])
        [(= ?date ?today)]
    ]
    [(psu-next ?b ?next-start ?next-end)
        (or [?b :block/deadline ?date] [?b :block/scheduled ?date])
        [(> ?date ?next-start)]
        [(<= ?date ?next-end)]
    ]
    [(psu-new ?b ?new-start-days ?new-end-ts)
